      <div class="container">
        <h2>Iniciar sesión</h2>
        <form action="home" method="post">
          <div class="form-group">
            <label for="username">Usuario:</label>
            <input type="text" name="nombre" id="user" placeholder="Ingrese su nombre de usuario" required>
          </div>
          <div class="form-group">
            <label for="password">Contraseña:</label>
            <input type="password" id="password" name="contrasena" placeholder="Ingrese su contraseña" required>
          </div>
          <button type="submit" onclick="guardarCookie(nombre)">Iniciar sesión</button>
          <a type="button" class="botonR" href="/registro">Registrarse</a>
          <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Recuperar Contraseña
          </button>
        </form>
      </div>

      <!-- Modal -->
      <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="exampleModalLabel">Recuperacion de usuario</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <form action="recuperarUsuario" method="post">
                <div class="form-group">
                  <label for="username">Usuario:</label>
                  <input type="text" id="username" name="nombre" placeholder="Ingrese su nombre de usuario" required>
                </div>
                
                <button type="submit">Recuperar</button>
              </form>
            </div>
          </div>
        </div>
      </div>


    </main>

